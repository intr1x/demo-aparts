# Payload CMS Secret (минимум 32 символа)
PAYLOAD_SECRET=your-secret-key-here-at-least-32-characters

# Database Connection String
# Для Vercel Postgres: получите из Vercel Dashboard
# Для Supabase: получите из Supabase Project Settings > Database
# Для Neon: получите из Neon Dashboard
DATABASE_URI=postgresql://user:password@host:5432/database

# Public Server URL (ваш домен на Vercel)
NEXT_PUBLIC_SERVER_URL=https://your-app.vercel.app

# Для production окружения
NODE_ENV=production

